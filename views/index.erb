<div class="container">

  <table class="table table-striped table-bordered">
    <tr>
      <th>Name</th>
      <th>Summary</th>
      <th>Budget</th>
    </tr>

    <% @investments.each do |investment| %>
      <tr>
        <td><%= investment.name %></td>
        <td><%= investment.executive_summary__c %></td>
        <td><%= investment.total_budget__c %></td>
      </tr>
    <% end %>
  </table>

</div>
